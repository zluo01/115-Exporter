{
  "name": "115-exporter",
  "displayName": "115 File Exporter",
  "description": "Helper to download files from 115 through Aria2",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run build && web-ext run --source-dir ./build/",
    "build": "npm run type-check && vite build",
    "package": "web-ext build --config=webext.config.js",
    "complete": "npm run build && npm run package",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js"
  },
  "dependencies": {
    "aria2": "4.1.2",
    "big-integer": "1.6.52",
    "react": "18.3.1",
    "react-dom": "18.3.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "4.3.0",
    "@types/node": "20.14.2",
    "@types/react": "18.3.3",
    "@types/react-dom": "18.3.0",
    "@types/webextension-polyfill": "0.10.7",
    "@typescript-eslint/eslint-plugin": "7.12.0",
    "@typescript-eslint/parser": "7.12.0",
    "@vitejs/plugin-react-swc": "3.7.0",
    "autoprefixer": "10.4.19",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-promise": "6.2.0",
    "eslint-plugin-react": "7.34.2",
    "eslint-plugin-react-hooks": "4.6.2",
    "postcss": "8.4.38",
    "prettier": "3.3.1",
    "prettier-plugin-tailwindcss": "0.6.2",
    "tailwindcss": "3.4.4",
    "typescript": "5.4.5",
    "vite": "5.2.13",
    "vite-plugin-css-injected-by-js": "3.5.1",
    "web-ext": "8.0.0",
    "webextension-polyfill": "0.12.0"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
